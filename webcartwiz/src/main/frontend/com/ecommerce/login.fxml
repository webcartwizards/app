<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.ecommerce.LoginController" spacing="10" alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Title -->
    <Label text="Login" style="-fx-font-size: 24px;"/>

    <!-- Username Field -->
    <TextField fx:id="usernameField" promptText="Username" maxWidth="200"/>

    <!-- Password Field -->
    <PasswordField fx:id="passwordField" promptText="Password" maxWidth="200"/>

    <!-- Login Button -->
    <Button text="Login" onAction="#handleLogin" maxWidth="100"/>

</VBox>
