<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.ecommerce.LoginController" spacing="10" alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <TextField fx:id="usernameField" promptText="Username" prefWidth="150" maxWidth="150"/>
    <PasswordField fx:id="passwordField" promptText="Password" prefWidth="150" maxWidth="150"/>
    <Button text="Login" onAction="#handleLogin"/>
    <Button text="Register Your Account" onAction="#handleRegister"/>
</VBox>
